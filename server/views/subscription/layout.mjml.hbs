<mjml>
    <mj-head>
        <mj-title>{{title}}</mj-title>
        <mj-font name="Lato" href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,400italic" />
        <mj-attributes>
            <mj-all font-size="15px" color="#2D3E4F" font-family="'Open Sans', Helvetica, Arial, sans-serif" />
            <mj-class name="h2" font-size="42px" font-weight="700" line-height="48px" color="#08566B" />
            <mj-class name="h3" font-size="26px" font-weight="700" line-height="40px" color="#08566B" />
            <mj-class name="p"  font-size="16px" font-weight="400" line-height="24px" color="#0B2F39" />
            <mj-class name="small"  font-size="12px" line-height="16px" color="#999999" />
            <mj-class name="hr" border-width="1px" border-style="solid" border-color="#e4e5e6" />
            <mj-class name="button" font-weight="700" font-size="16px" background-color="#08566B" color="white" text-transform="uppercase" align="left" inner-padding="8px 16px" border-radius="2px" />
            <mj-class name="footer-text" font-size="16px" line-height="24px" color="#999999" />
        </mj-attributes>
    </mj-head>
    <mj-body width="560px" background-color="#ffffff">
        <mj-raw>
            {{#if isWeb}}
                <style>
                    {{{formInputStyle}}}
                    .alert { max-width: 520px; font-family: 'Open Sans', Helvetica, Arial, sans-serif; }
                </style>
            {{/if}}
        </mj-raw>

        <mj-section padding-bottom="0">
            <mj-column>
                <mj-image width="50px" src="https://cdn.hackthe6ix.com/logo/logo.png"></mj-image>
                <mj-text mj-class="h3" align="center" color="#23B5AF">
                    HACK THE 6IX
                </mj-text>
            </mj-column>
        </mj-section>

        <mj-section padding-bottom="0">
            <mj-column>
                <mj-text mj-class="h2">
                    {{title}}
                </mj-text>
            </mj-column>
        </mj-section>

        <mj-raw>
            {{#if isWeb}}
                {{> subscription_flash_messages}}
            {{/if}}
        </mj-raw>

        {{{body}}}

        <mj-section padding-top="0">
            <mj-column>
                <mj-text mj-class="small" font-style="italic">
                    <!-- POST ADDRESS -->
                </mj-text>
            </mj-column>
        </mj-section>

        <mj-raw>
            {{#if isWeb}}
                <!-- fixes https://github.com/mjmlio/mjml/issues/359 -->
                {{> subscription_footer_scripts btnBgColor='#2D3E4F' btnBgColorHover='#1A242F'}}
            {{/if}}
        </mj-raw>

    </mj-body>
</mjml>
